<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectgamemode"
    tools:context="com.example.medve.flagsquizapp.Settings">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:id="@+id/settings"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewsettings"
        android:layout_alignBottom="@+id/settings"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/setting_group"
        android:layout_below="@+id/settings"
        android:layout_alignParentStart="true">

        <Button
            android:text="Sound off"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/sound"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"/>

        <Button
            android:text="Notifications off"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/notification"
            android:layout_gravity="center"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="9dp"/>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/backtomain"
        android:layout_alignTop="@+id/viewsettings"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />


</RelativeLayout>
