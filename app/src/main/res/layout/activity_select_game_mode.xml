<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_game_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectgamemode"
    tools:context="com.example.medve.flagsquizapp.SelectGameMode">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:id="@+id/gamemode"
        android:layout_alignParentEnd="true"

    />

    <TextView
        android:text="Select game mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewgamemode"
        android:layout_alignBottom="@+id/gamemode"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gamemode"
        android:layout_alignParentStart="true">

        <Button
            android:text="Country/Flags"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/flagsmode"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"/>

        <Button
            android:text="Cities"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/citiesmode"
            android:layout_gravity="center"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="9dp"/>

        <Button
            android:text="Famous Places"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/placemode"
            android:layout_gravity="center"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="9dp"/>

        <Button
            android:text="WaterFalls"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/waterfallsmode"
            android:layout_gravity="center"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="9dp"/>

        <TextView
            android:text="Level mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewselectgamemodeseekbar"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/colorBestScore"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="23sp" />

        <SeekBar
            android:minHeight="20dp"
            android:maxHeight="20dp"
            android:max="3"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/levelSeekbar" />

        <TextView
            android:id="@+id/levelmode"
            android:layout_gravity="center"
            android:text="EASY"
            android:fontFamily="sans-serif-black"
            android:textSize="18sp"
            android:textStyle="bold|normal"
            android:textColor="@color/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/backtomain"
        android:layout_alignTop="@+id/viewgamemode"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />


</RelativeLayout>
