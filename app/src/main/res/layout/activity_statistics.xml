<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_statistics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectgamemode"
    tools:context="com.example.medve.flagsquizapp.Statistics">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:id="@+id/statistics"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="Statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewstatistic"
        android:layout_alignBottom="@+id/statistics"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/statistics"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="70dp">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:id="@+id/choosemodetool"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:text="Choose statistics for game mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/viewchoosestatistic"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="16sp" />

        </RelativeLayout>

        <Button
            android:text="Country/Flags"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/flagsscore"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"/>

        <Button
            android:text="Cities"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/citiesscore"
            android:layout_gravity="center"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="9dp"/>

        <Button
            android:text="Famous Places"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/placescore"
            android:layout_gravity="center"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="9dp"/>

        <Button
            android:text="WaterFalls"
            android:layout_width="@dimen/button_main_margin_top"
            android:layout_height="@dimen/general_height_stat_mode_setting"
            android:id="@+id/waterfallsscore"
            android:layout_gravity="center"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="9dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:id="@+id/backtomain"
        android:layout_alignTop="@+id/viewstatistic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

</RelativeLayout>
